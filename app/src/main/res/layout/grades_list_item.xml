<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft" >

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/grades_list_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold"
        android:text="Test">
    </TextView>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/grades_list_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16dip"
        android:text="90%">
    </TextView>

    <ImageButton
        android:id="@+id/grades_list_edit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_mode_edit_black_24dp"
        android:backgroundTint="#8c8c8c"/>

    <ImageButton
        android:id="@+id/grades_list_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_delete_black_24dp"
        android:backgroundTint="#8c8c8c"/>

</LinearLayout>