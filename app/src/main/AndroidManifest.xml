<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.juliazluo.www.gradeandgpacalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".IntroActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CoursesActivity"
            android:label="@string/title_activity_courses"
            android:parentActivityName=".IntroActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.juliazluo.www.gradeandgpacalculator.IntroActivity" />
        </activity>
        <activity
            android:name=".GradesActivity"
            android:label="@string/title_activity_grades"
            android:parentActivityName=".CoursesActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.juliazluo.www.gradeandgpacalculator.CoursesActivity" />
        </activity>
        <activity
            android:name=".AddGradeActivity"
            android:label="@string/title_activity_add_grade"
            android:parentActivityName=".GradesActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.juliazluo.www.gradeandgpacalculator.GradesActivity" />
        </activity>
    </application>

</manifest>